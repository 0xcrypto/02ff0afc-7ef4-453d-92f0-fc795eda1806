<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.barrelcoders.apps.vanipedia.PlayerActivity"
    tools:showIn="@layout/app_bar_player">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="0dp">
        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#000000"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gradient"
            android:padding="5dp">
            <TextView
                android:id="@+id/currentChapterTextView"
                android:layout_width ="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Select Location"
                android:textSize="15dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textColor="#FFF"
                android:maxLines="2"
                android:typeface="sans"
                ></TextView>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/realtimeCounterContainer"
            android:baselineAligned="false"
            android:layout_marginTop="5dp">
            <Button
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_like"
                android:background="@android:color/transparent"
                android:textColor="#FFF"
                android:id="@+id/btnLikes"
                android:text="0"
                android:textSize="20dp"
                android:layout_marginRight="10dp"></Button>
            <Button
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_comment"
                android:background="@android:color/transparent"
                android:textColor="#FFF"
                android:id="@+id/btnComment"
                android:text="0"
                android:textSize="20dp"
                android:layout_marginRight="10dp"></Button>
            <Button
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_rating"
                android:textColor="#FFF"
                android:id="@+id/btnRating"
                android:textSize="20dp"
                android:text="0"></Button>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_gravity="center"
            android:id="@+id/outerDialViewLinearLayout">
            <ImageView
                android:id="@+id/outerDialView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/outer_dial"
                />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="325dp"
            android:orientation="horizontal"
            android:layout_width="325dp"
            android:id="@+id/circleContainer"
            android:layout_gravity="center" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:layout_gravity="center">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_width="100dp"
                    android:id="@+id/place0" >
                    <TextView
                        android:id="@+id/txtbook0"
                        android:layout_width ="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:rotation="-45"
                        android:text="Ahmedabad"
                        android:maxLines="1"
                        android:ellipsize = "middle"
                        ></TextView>
                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_width="100dp"
                    android:id="@+id/place1">
                    <TextView
                        android:id="@+id/txtbook1"
                        android:layout_width ="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:gravity="top|center"
                        android:rotation="0"
                        android:text="Ahmedabad"
                        android:ellipsize = "middle"
                        android:maxLines="1"
                        ></TextView>
                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_width="100dp"
                    android:id="@+id/place2" >
                    <TextView
                        android:id="@+id/txtbook2"
                        android:layout_width ="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:rotation="45"
                        android:text="Ahmedabad"
                        android:ellipsize = "middle"
                        android:maxLines="1"
                        ></TextView>
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/place3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/txtbook3"
                        android:layout_width ="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:layout_gravity="top|center"
                        android:gravity="top|center"
                        android:rotation="-90"
                        android:text="Ahmedabad"
                        android:ellipsize = "middle"
                        android:maxLines="1"
                        ></TextView>
                    </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_width="100dp"
                    android:id="@+id/place4">
                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_width="100dp"
                    android:id="@+id/place5" >
                    <TextView
                        android:id="@+id/txtbook5"
                        android:layout_width ="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:gravity="top|center"
                        android:rotation="90"
                        android:text="Ahmedabad"
                        android:ellipsize = "middle"
                        android:maxLines="1"
                        ></TextView>
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_width="100dp"
                    android:id="@+id/place6" >
                    <TextView
                        android:id="@+id/txtbook6"
                        android:layout_width ="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:typeface="sans"
                        android:gravity="center"
                        android:rotation="45"
                        android:text="Ahmedabad"
                        android:ellipsize = "middle"
                        android:maxLines="1"
                        ></TextView>
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/place7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/txtbook7"
                        android:layout_width ="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:gravity="bottom|center"
                        android:rotation="0"
                        android:text="Ahmedabad"
                        android:ellipsize = "middle"
                        android:maxLines="1"
                        ></TextView>
                    </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_width="100dp"
                    android:layout_weight="33"
                    android:id="@+id/place8" >
                    <TextView
                        android:id="@+id/txtbook8"
                        android:layout_width ="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:rotation="-45"
                        android:text="Ahmedabad"
                        android:ellipsize = "middle"
                        android:maxLines="1"
                        ></TextView>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center">

            <ImageView
                android:id="@+id/innerDialView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:src="@drawable/inner_dial" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
